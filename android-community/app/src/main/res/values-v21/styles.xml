<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary_700</item>
        <item name="android:textColorPrimary">@color/primary_100</item>
        <item name="android:textColor">@color/primary_800</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_800</item>
        <item name="android:navigationBarColor">@color/primary_800</item>
        <item name="android:windowBackground">@color/primary_100</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/primary_100</item>

    </style>

    <style name="SplashTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@color/primary_500</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
